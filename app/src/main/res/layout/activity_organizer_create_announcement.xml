<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBG"
    tools:context=".organizer.CreateAnnouncement">

    <include
        android:id="@+id/include"
        layout="@layout/organizer_pages_toolbar" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/titleTIL"
        android:hint="Title"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleTIET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTIL"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="5dp"
        android:id="@+id/contentTIL"
        android:hint="Content"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contentTIET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="20"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveAnnouncementBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#004BC0"
        android:text="Save"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/contentTIL"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteAnnouncementBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="Delete"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/saveAnnouncementBtn"
        android:visibility="gone"/>

</RelativeLayout>