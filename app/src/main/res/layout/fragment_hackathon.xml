<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".participant.HackathonFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/allHackathonCV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:cardElevation="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/all_hackathon"
                    android:layout_centerHorizontal="true"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="All Hackathon"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:cornerRadius="25dp"
                    android:id="@+id/allHackathonBtn"
                    android:textAllCaps="false"/>


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/participatedHackathonCV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:cardElevation="10dp"
            android:layout_below="@id/allHackathonCV">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/participated"
                    android:layout_centerHorizontal="true"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text= "Participated Hackathon"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:cornerRadius="25dp"
                    android:id="@+id/participatedHackathonBtn"
                    android:textAllCaps="false"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</FrameLayout>