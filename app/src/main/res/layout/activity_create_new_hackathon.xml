            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select mode"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_below="@id/maxTeamMembersTIL"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:outlineSpotShadowColor="@color/primary"
                android:id="@+id/modeTIL"
                app:placeholderTextColor="@color/primary"
                android:layout_marginVertical="10dp">

                <AutoCompleteTextView
                    android:id="@+id/modeActv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateGroup"
                android:layout_below="@id/modeTIL"
                android:layout_marginVertical="10dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startDateBtn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="01 JAN 1900"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@+id/startDateTitle"
                    app:layout_constraintStart_toStartOf="@+id/startDateTitle"
                    app:layout_constraintTop_toBottomOf="@+id/startDateTitle"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="5dp"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/endDateBtn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="01 JAN 1900"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@+id/endDateTitle"
                    app:layout_constraintStart_toStartOf="@+id/endDateTitle"
                    app:layout_constraintTop_toBottomOf="@+id/endDateTitle"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="5dp"
                    app:cornerRadius="10dp"/>

                <TextView
                    android:id="@+id/startDateTitle"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/endDateTitle"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="End Date"
                    app:layout_constraintStart_toEndOf="@+id/startDateTitle"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/shortDescTIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Short Description"
                app:errorIconDrawable="@drawable/ic_baseline_error_24"
                app:startIconDrawable="@drawable/ic_baseline_info_24"
                android:layout_below="@+id/dateGroup"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                android:layout_marginVertical="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:id="@+id/shortDescTIET" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/longDescTIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Long Description"
                app:errorIconDrawable="@drawable/ic_baseline_error_24"
                app:startIconDrawable="@drawable/ic_baseline_description_24"
                android:layout_below="@+id/shortDescTIL"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                android:layout_marginVertical="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="15"
                    android:id="@+id/longDescTIET" />

            </com.google.android.material.textfield.TextInputLayout>

