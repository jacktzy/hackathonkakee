            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Hackathon"
                android:id="@+id/createHackathonBtn"
                android:layout_below="@id/longDescTIL"
                app:cornerRadius="20dp"
                android:visibility="visible"/>

            <ProgressBar
                android:id="@+id/createHackathonLoadPB"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/longDescTIL"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:indeterminateTint="@color/primary"
                android:visibility="invisible" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Hackathon"
                android:id="@+id/deleteHackathonBtn"
                android:layout_below="@id/createHackathonBtn"
                android:backgroundTint="#FF0000"
                app:cornerRadius="20dp"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/deleteHackathonLoadPB"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/createHackathonBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:indeterminateTint="#FF0000"
                android:visibility="gone" />


